<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error" name="ConfluenceSpacePermission">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%m%n" />
        </Console>
        <RollingFile name="RollingFile" 
            fileName="ConfluenceSpacePermission.log" 
            filePattern="ConfluenceSpacePermission.%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="500 MB" />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="RollingFile" level="debug" />
            <AppenderRef ref="Console" level="debug"/>
        </Root>
        <Logger name="com.igsl" level="debug" additivity="false">
            <AppenderRef ref="RollingFile" level="debug" />
            <AppenderRef ref="Console" level="debug" />
        </Logger>
    </Loggers>
</Configuration>